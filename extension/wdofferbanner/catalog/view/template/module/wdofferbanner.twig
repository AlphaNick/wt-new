<div class="container offer-banner section-mt">
  <div class="row">
    {% for banner in banners %}
    <div class="col-md-6 col-lg-6">
      <div class="beffect">
        <div class="ofr-banner">
        {% if banner.link %}
          <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="mx-auto img-fluid"/></a>
        {% else %}
          <img src="{{ banner.image }}" alt="{{ banner.title }}" class="mx-auto img-fluid"/>
        {% endif %}                 
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 order-xs-first order-sm-first order-md-first order-lg-last d-flex align-content-center flex-wrap">      
      <div class="offerdesc">
        
         {{ banner.description }}
      </div>
    </div>
    {% endfor %}

 



  
  